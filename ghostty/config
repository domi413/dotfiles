### Keybinds
keybind = unconsumed:ctrl+shift+r=reload_config
keybind = unconsumed:ctrl+l=clear_screen
keybind = unconsumed:f12=toggle_window_decorations

# Font size
keybind = unconsumed:ctrl+shift+a=increase_font_size:0.5
keybind = unconsumed:ctrl+shift+x=decrease_font_size:0.5
keybind = unconsumed:ctrl+shift+0=reset_font_size

# Tab
keybind = unconsumed:ctrl+shift+p=next_tab
keybind = unconsumed:ctrl+shift+n=previous_tab

keybind = unconsumed:ctrl+shift+enter=toggle_tab_overview

# Window (splits)
keybind = unconsumed:ctrl+shift+k=goto_split:top
keybind = unconsumed:ctrl+shift+j=goto_split:bottom
keybind = unconsumed:ctrl+shift+h=goto_split:left
keybind = unconsumed:ctrl+shift+l=goto_split:right

keybind = unconsumed:ctrl+shift+o=new_window

keybind = unconsumed:shift+alt+k=new_split:up
keybind = unconsumed:shift+alt+j=new_split:down
keybind = unconsumed:shift+alt+h=new_split:left
keybind = unconsumed:shift+alt+l=new_split:right

keybind = unconsumed:ctrl+shift+.=resize_split:up,20
keybind = unconsumed:ctrl+shift+,=resize_split:down,20
keybind = unconsumed:ctrl+shift+m=resize_split:left,20
keybind = unconsumed:ctrl+shift+-=resize_split:right,20

# Buffer (scrolling)
keybind = unconsumed:ctrl+shift+$=jump_to_prompt:1
keybind = unconsumed:ctrl+shift+^=scroll_to_top

keybind = unconsumed:ctrl+shift+u=scroll_page_lines:-1
keybind = unconsumed:ctrl+shift+d=scroll_page_lines:1

keybind = unconsumed:ctrl+shift+b=scroll_page_up
keybind = unconsumed:ctrl+shift+f=scroll_page_down

