{
  // Doesn't make sense since zed is installed through package manager
  "auto_update": false,

  // Auto-install extensions
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    "cspell": true,
    "html": true,
    "latex": true,
    "lua": true,
    "toml": true,
    "xml": true,
    "zed_bash": true
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Telemetry                                                │
  // ╰──────────────────────────────────────────────────────────╯
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ UI                                                       │
  // ╰──────────────────────────────────────────────────────────╯
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  "gutter": {
    "code_actions": false,
    "folds": false
    // "runnables": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "when_in_call"
  },
  "notification_panel": {
    "button": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "activate_on_close": "history"
  },
  "project_panel": {
    "default_width": 240,
    "folder_icons": false,
    "git_status": true,
    "indent_size": 25
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Editor                                                   │
  // ╰──────────────────────────────────────────────────────────╯
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 2,
      "max_severity": "warning"
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },
  "hide_mouse": "on_typing_and_movement",
  "inlay_hints": {
    "enabled": false
  },
  "middle_click_paste": false,
  "vertical_scroll_margin": 0,

  // ╭──────────────────────────────────────────────────────────╮
  // │ Font                                                     │
  // ╰──────────────────────────────────────────────────────────╯
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": "standard",
  "buffer_font_weight": 340, // Dark theme
  // "buffer_font_weight": 390, // Light theme

  // "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_family": "CaskaydiaCove Nerd Font",
  "buffer_font_features": {
    // Font features not working!!?? -> Bug in cosmic font
    // FiraCode
    // "cv01": true,
    // "cv02": true,
    // "cv15": true,
    // "cv19": true,
    // "cv23": true,
    // "cv29": true,
    // "cv31": true,
    // "ss01": true,
    // "ss03": true,
    // "ss05": true

    // CaskaydiaCove
    "ss19": true
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Theme                                                    │
  // ╰──────────────────────────────────────────────────────────╯
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Vim                                                      │
  // ╰──────────────────────────────────────────────────────────╯
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  // "scroll_beyond_last_line": "off",
  "scrollbar": {
    "show": "never"
  },
  "vim": {
    "highlight_on_yank_duration": 0
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Assistant                                                │
  // ╰──────────────────────────────────────────────────────────╯
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Terminal                                                 │
  // ╰──────────────────────────────────────────────────────────╯
  "terminal": {
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    },
    "font_size": 14
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ LSP                                                      │
  // ╰──────────────────────────────────────────────────────────╯
  "lsp": {
    "gopls": {
      "initialization_options": {
        "analyses": {
          "unusedparams": true
        },
        "gofumpt": true,
        "staticcheck": true,
        "usePlaceholders": true
      }
    },
    "taplo": {
      "settings": {
        "array_auto_collapse": false
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": false,
            "forwardSearchAfter": true,
            "executable": "tectonic",
            "args": ["-X", "compile", "%f"]
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": ["--synctex-forward", "%l:1:%f", "%p"]
          },
          "latexindent": {
            "local": ".latexindent"
          }
        }
      }
    }
  },
  "languages": {
    "CSharp": {
      "show_edit_predictions": false
    },
    "Blueprint": {
      "format_on_save": "off"
    },
    "C": {
      "show_edit_predictions": false,
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            // "--style=file", // Use this for .clang-format file
            "--style={BasedOnStyle: llvm, IndentWidth: 4, ColumnLimit: 80, ReflowComments: false, AlignArrayOfStructures: Left, AlignConsecutiveMacros: Consecutive, RemoveParentheses: ReturnStatement}",
            "--assume-filename={buffer_path}"
          ]
        }
      }
    },
    "C++": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            // "--style=file", // Use this for .clang-format file
            "--style={BasedOnStyle: llvm, IndentWidth: 4, ColumnLimit: 80, ReflowComments: false, AlignArrayOfStructures: Left, AlignConsecutiveMacros: Consecutive, RemoveParentheses: ReturnStatement}",
            "--assume-filename={buffer_path}"
          ]
        }
      }
    },
    "JSONC": {
      "format_on_save": "on"
    },
    "Markdown": {
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    "TOML": {
      "format_on_save": "on"
    }
  },

  // Italic fix
  "experimental.theme_overrides": {
    "syntax": {
      "attribute": {
        "font_style": "italic"
      },
      "boolean": {
        "font_style": "italic"
      },
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      },
      "constant": {
        "font_style": "italic"
      },
      "constructor": {
        "font_style": "italic"
      },
      "embedded": {
        "font_style": "italic"
      },
      "emphasis": {
        "font_style": "italic"
      },
      "emphasis.strong": {
        "font_style": "italic"
      },
      "enum": {
        "font_style": "italic"
      },
      "function": {
        "font_style": "italic"
      },
      "hint": {
        "font_style": "italic"
      },
      "keyword": {
        "font_style": "italic"
      },
      "label": {
        "font_style": "italic"
      },
      "link_text": {
        "font_style": "italic"
      },
      "link_uri": {
        "font_style": "italic"
      },
      "number": {
        "font_style": "italic"
      },
      "operator": {
        "font_style": "italic"
      },
      "predictive": {
        "font_style": "italic"
      },
      "preproc": {
        "font_style": "italic"
      },
      "primary": {
        "font_style": "italic"
      },
      "property": {
        "font_style": "italic"
      },
      "punctuation": {
        "font_style": "italic"
      },
      "punctuation.bracket": {
        "font_style": "italic"
      },
      "punctuation.delimiter": {
        "font_style": "italic"
      },
      "punctuation.list_marker": {
        "font_style": "italic"
      },
      "punctuation.special": {
        "font_style": "italic"
      },
      "string": {
        "font_style": "italic"
      },
      "string.escape": {
        "font_style": "italic"
      },
      "string.regex": {
        "font_style": "italic"
      },
      "string.special": {
        "font_style": "italic"
      },
      "string.special.symbol": {
        "font_style": "italic"
      },
      "tag": {
        "font_style": "italic"
      },
      "text.literal": {
        "font_style": "italic"
      },
      "title": {
        "font_style": "italic"
      },
      "type": {
        "font_style": "italic"
      },
      "variable": {
        "font_style": "italic"
      },
      "variable.special": {
        "font_style": "italic"
      },
      "variant": {
        "font_style": "italic"
      }
    }
  }
}
