{
  // Update through package manager
  "auto_update": false,

  // Auto-install extensions
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    "cspell": true,
    "html": true,
    "latex": true,
    "lua": true,
    "ruff": true,
    "toml": true,
    "xml": true,
    "basher": true
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Telemetry                                                │
  // ╰──────────────────────────────────────────────────────────╯
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ UI                                                       │
  // ╰──────────────────────────────────────────────────────────╯
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "gutter": {
    "code_actions": false,
    "folds": false
    // "runnables": false
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": true
  },
  "notification_panel": {
    "button": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "project_panel": {
    "folder_icons": false,
    "indent_size": 25
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Editor                                                   │
  // ╰──────────────────────────────────────────────────────────╯
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 2,
      "max_severity": "warning"
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },
  "hide_mouse": "on_typing_and_movement",
  "inline_code_actions": false,
  "middle_click_paste": false,
  "vertical_scroll_margin": 0,

  // ╭──────────────────────────────────────────────────────────╮
  // │ Font                                                     │
  // ╰──────────────────────────────────────────────────────────╯
  "ui_font_size": 15.5,
  "buffer_font_size": 14.5,
  "buffer_line_height": "standard",
  "buffer_font_weight": 300,

  "buffer_font_family": "CaskaydiaCove Nerd Font",
  "buffer_font_features": {
    "ss19": true
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Theme                                                    │
  // ╰──────────────────────────────────────────────────────────╯
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Vim                                                      │
  // ╰──────────────────────────────────────────────────────────╯
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  // "scroll_beyond_last_line": "off",
  "scrollbar": {
    "show": "never"
  },
  "vim": {
    "highlight_on_yank_duration": 0
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Assistant                                                │
  // ╰──────────────────────────────────────────────────────────╯
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Terminal                                                 │
  // ╰──────────────────────────────────────────────────────────╯
  "terminal": {
    "dock": "bottom",
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    },
    "font_size": 14,
    "font_weight": 360
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ LSP                                                      │
  // ╰──────────────────────────────────────────────────────────╯
  "lsp": {
    "gopls": {
      "initialization_options": {
        "analyses": {
          "unusedparams": true
        },
        "gofumpt": true,
        "staticcheck": true,
        "usePlaceholders": true,
        "hints": {
          "assignVariableTypes": false,
          "compositeLiteralFields": false,
          "compositeLiteralTypes": false,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true,
            "executable": "tectonic",
            "args": ["-X", "compile", "%f"]
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": ["--synctex-forward", "%l:1:%f", "%p"]
          }
        }
      }
    }
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Language config                                          │
  // ╰──────────────────────────────────────────────────────────╯
  "languages": {
    "C": {
      "format_on_save": "on"
    },
    "C++": {
      "format_on_save": "on"
    },
    "JSONC": {
      "format_on_save": "on"
    },
    "LaTeX": {
      "formatter": {
        "external": {
          "command": "latexindent",
          "arguments": ["-m", "-rv", "-l"]
        }
      }
    },
    "Lua": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["--stdin-filepath", "{buffer_path}", "-"]
        }
      }
    },
    "Markdown": {
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },

  // Italic fix
  "experimental.theme_overrides": {
    "border.variant": "#00000000",
    "syntax": {
      "attribute": {
        "font_style": "italic"
      },
      "boolean": {
        "font_style": "italic"
      },
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      },
      "constant": {
        "font_style": "italic"
      },
      "constructor": {
        "font_style": "italic"
      },
      "embedded": {
        "font_style": "italic"
      },
      "emphasis": {
        "font_style": "italic"
      },
      "emphasis.strong": {
        "font_style": "italic"
      },
      "enum": {
        "font_style": "italic"
      },
      "function": {
        "font_style": "italic"
      },
      "hint": {
        "font_style": "italic"
      },
      "keyword": {
        "font_style": "italic"
      },
      "label": {
        "font_style": "italic"
      },
      "link_text": {
        "font_style": "italic"
      },
      "link_uri": {
        "font_style": "italic"
      },
      "number": {
        "font_style": "italic"
      },
      "operator": {
        "font_style": "italic"
      },
      "predictive": {
        "font_style": "italic"
      },
      "preproc": {
        "font_style": "italic"
      },
      "primary": {
        "font_style": "italic"
      },
      "property": {
        "font_style": "italic"
      },
      "punctuation": {
        "font_style": "italic"
      },
      "punctuation.bracket": {
        "font_style": "italic"
      },
      "punctuation.delimiter": {
        "font_style": "italic"
      },
      "punctuation.list_marker": {
        "font_style": "italic"
      },
      "punctuation.special": {
        "font_style": "italic"
      },
      "string": {
        "font_style": "italic"
      },
      "string.escape": {
        "font_style": "italic"
      },
      "string.regex": {
        "font_style": "italic"
      },
      "string.special": {
        "font_style": "italic"
      },
      "string.special.symbol": {
        "font_style": "italic"
      },
      "tag": {
        "font_style": "italic"
      },
      "text.literal": {
        "font_style": "italic"
      },
      "title": {
        "font_style": "italic"
      },
      "type": {
        "font_style": "italic"
      },
      "variable": {
        "font_style": "italic"
      },
      "variable.special": {
        "font_style": "italic"
      },
      "variant": {
        "font_style": "italic"
      }
    }
  }
}
