{
  // Doesn't make sense since it's installed through package manager
  "auto_update": false,

  // ╭──────────────────────────────────────────────────────────╮
  // │ Telemetry                                                │
  // ╰──────────────────────────────────────────────────────────╯
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ UI                                                       │
  // ╰──────────────────────────────────────────────────────────╯
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  // gutter = left vertical bar (next to line numbers)
  "gutter": {
    "code_actions": false,
    "folds": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "activate_on_close": "history"
  },
  "project_panel": {
    "default_width": 240,
    "folder_icons": false,
    "git_status": true,
    "indent_size": 25
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Editor                                                   │
  // ╰──────────────────────────────────────────────────────────╯
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },
  "inlay_hints": {
    "enabled": false
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Font                                                     │
  // ╰──────────────────────────────────────────────────────────╯
  "ui_font_size": 16,
  "buffer_font_size": 14.5,
  "buffer_line_height": "standard",
  "buffer_font_weight": 340,

  // "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_family": "CaskaydiaCove Nerd Font",
  "buffer_font_features": {
    // Font features not working!!?? -> Bug in cosmic font
    // Firacode
    "cv01": true,
    "cv02": true,
    "cv15": true,
    "cv19": true,
    "cv23": true,
    "cv29": true,
    "cv31": true,
    "ss01": true,
    "ss03": true,
    "ss05": true

    // CaskaydiaCove
    // "ss19": true
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Theme                                                    │
  // ╰──────────────────────────────────────────────────────────╯
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Vim                                                      │
  // ╰──────────────────────────────────────────────────────────╯
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  // "scroll_beyond_last_line": "off",
  "scrollbar": { "show": "never" },
  "vim": {
    "highlight_on_yank_duration": 0,
    "use_multiline_find": true,
    "use_smartcase_find": true
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Assistant                                                │
  // ╰──────────────────────────────────────────────────────────╯
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ Terminal                                                 │
  // ╰──────────────────────────────────────────────────────────╯
  "terminal": {
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },

  // ╭──────────────────────────────────────────────────────────╮
  // │ LSP                                                      │
  // ╰──────────────────────────────────────────────────────────╯
  // TODO: Configure language specific settings like formatting...
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": ["--clang-tidy"] // FIMXME: Doesn't work?
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true,
            "executable": "tectonic",
            "args": ["-X", "compile", "%f"]
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": [
              "--synctex-forward",
              "%l:1:%f",
              "-x",
              "zed %%{input}:%%{line}",
              "%p"
            ]
          }
        }
      }
    },
    "ltex": {
      "settings": {
        "ltex": {
          "language": "de-CH"
        }
      }
    }
  },
  "languages": {
    "C": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            // "--style=file", // Use this for .clang-format file
            "--style={BasedOnStyle: llvm, IndentWidth: 4, ColumnLimit: 80, ReflowComments: false, AlignArrayOfStructures: Left, AlignConsecutiveMacros: Consecutive, RemoveParentheses: ReturnStatement}",
            "--assume-filename={buffer_path}"
          ]
        }
      },
      "format_on_save": "on"
    },
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            // "--style=file", // Use this for .clang-format file
            "--style={BasedOnStyle: llvm, IndentWidth: 4, ColumnLimit: 80, ReflowComments: false, lignArrayOfStructures: Left, AlignConsecutiveMacros: Consecutive, RemoveParentheses: ReturnStatement}",
            "--assume-filename={buffer_path}"
          ]
        }
      },
      "format_on_save": "on"
    }
  }
}
